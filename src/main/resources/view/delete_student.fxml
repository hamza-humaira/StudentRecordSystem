<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DeleteStudentController">

    <children>

        <Label layoutX="241.0" layoutY="23.0" text="Delete Student">
            <font>
                <Font name="Tahoma Bold" size="18.0" />
            </font>
        </Label>

        <!-- Search -->
        <TextField fx:id="txtSearchId" layoutX="150" layoutY="60" prefWidth="200" promptText="Enter Student ID" />

        <Button layoutX="370" layoutY="60" onAction="#searchStudent" text="Search" />

        <!-- Table -->
        <TableView fx:id="table" layoutX="50.0" layoutY="110.0" prefHeight="145.0" prefWidth="500">

            <columns>
                <TableColumn fx:id="colName" prefWidth="100" text="Name" />
                <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                <TableColumn fx:id="colDept" prefWidth="80" text="Dept" />
                <TableColumn fx:id="colEmail" prefWidth="160" text="Email" />
                <TableColumn fx:id="colCgpa" prefWidth="80" text="CGPA" />
            </columns>

        </TableView>

        <!-- Delete Button -->
        <Button layoutX="206.0" layoutY="284.0" onAction="#deleteStudent" style="-fx-background-color: #343434;" text="Delete Selected Student" textFill="WHITE">
         <font>
            <Font name="Tahoma Bold" size="14.0" />
         </font></Button>

        <!-- Message -->
        <Label fx:id="lblMessage" layoutX="180" layoutY="350" />

    </children>
</AnchorPane>
